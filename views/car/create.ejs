<%- include('../partials/head') %>

<div id="content">
  <div class="row">
    <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '>'">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Cars</li>
        <li class="breadcrumb-item"><a href="/cars-list">List Cars</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add New Cars</li>
      </ol>
    </nav>
    <h3 class="page-title">Add New Car</h3>
    <form action="/cars-store" method="POST" enctype="multipart/form-data">
      <div class="wrapper">
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Nama<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input type="text" placeholder="Avanza" name="name" />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Sewa per Hari<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input type="number" placeholder="Rp 0,-" name="costPerDay" />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Ukuran<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <select aria-label="Default select example" name="size">
              <option value="small">Small</option>
              <option value="medium">Medium</option>
              <option value="large">Large</option>
            </select>
          </div>
        </div>
        <div class="row">
          <label for="" class="col-sm-1 col-form-label"
            >Foto<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input
              type="file"
              placeholder="https://placeimg.com/640/480/any"
              name="img"
            /><br />
            <span class="input-rule">File size max. 2MB</span>
          </div>
        </div>
      </div>
      <div class="d-flex bottom mt-3">
        <a href="/cars-list" class="btn-outline-primary">Cancel</a>
        <button type="submit" class="btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
