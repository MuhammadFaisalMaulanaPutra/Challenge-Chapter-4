<%- include('../partials/head') %>

<div id="content">
  <div class="row">
    <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '>'">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Cars</li>
        <li class="breadcrumb-item"><a href="/cars-list">List Cars</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          Update Car Information
        </li>
      </ol>
    </nav>
    <h3 class="page-title">Update Car Information</h3>
    <form action="/cars-update-<%= carDetail.id %>" method="POST">
      <div class="wrapper">
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Nama<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input type="text" name="name" value="<%= carDetail.name %>" />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Sewa per Hari<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input
              type="number"
              name="costPerDay"
              value="<%= carDetail.costPerDay %>"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="" class="col-sm-1 col-form-label"
            >Ukuran<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <select aria-label="Default select example" name="size">
              <option value="small" <% if(carDetail.size == "small"){ %> selected <% }%>>
                Small</option>
              <option value="medium" <% if(carDetail.size == "medium"){ %> selected <% }%>>
                Medium</option>
              <option value="large" <% if(carDetail.size == "large"){ %> selected <% }%>>
                Large</option>
            </select>
          </div>
        </div>
        <div class="row">
          <label for="" class="col-sm-1 col-form-label"
            >Foto<span class="text-danger">*</span>
          </label>
          <div class="col-sm-10">
            <input
              type="file"
              placeholder="https://placeimg.com/640/480/any"
            /><br />
            <span class="input-rule">File size max. 2MB</span>
          </div>
        </div>
      </div>
      <div class="d-flex bottom mt-3">
        <a href="/cars-list" class="btn-outline-primary">Cancel</a>
        <button type="submit" class="btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
